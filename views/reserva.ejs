<% include header %>
<section id="Reserva" class="reservaTransparent">
        <div class="container">
           <div class="center wow fadeInDown">
                <h2>Minhas Reservas</h2>

            </div>

            <% for(var i=0; i<reservations.length; i++) {%>

   <div class="grupoReserva">

           <img id="imagemTraje" src="<%= reservations[i].image %>">
           <label id="nomeTraje">Traje: <%= reservations[i].name %></label>
            <label id="tamanho">Tamanho: <%= reservations[i].size %></label>
           <label id="dataReserva">Data reservado: <%= reservations[i].created_at %></label>
           <label id="retirada">Retirar em até:2 dias úteis </label>


       <button id="botaoReserva" type="submit" name="submit" class="btn btn-primary btn-lg" required="required">Remover Reserva</button>
   </div>

<% } %>



            <div class="form-group">

            </div>
        </div><!--/.container-->
    </section><!--/#feature-->
