<% include header %>

    <section id="about-us">
        <div class="container">

            <div id="message">
                <h3>E-mail confirmado com sucesso!</h3>
            </div>

            <section id="feature" class="transparent-bg">

                <%if (!user){%>
                    <div class="container">

                        <div id="message"></div>
                        <div class="center wow fadeInDown">
                            <h2>Login</h2>

                        </div>

                        <div class="form-group">
                            <label>Email </label>
                            <input id="email" type="email" name="email" class="form-control" required="required">
                        </div>
                        <div class="form-group">
                            <label>Senha</label>
                            <input id="password" type="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" id="ajax_form" name="submit" class="btn btn-primary btn-lg" required="required">Efetuar Login</button>
                        </div>
                    </div>
                    <!--/.container-->
            </section>

            <%}%>

                <%if (user){%>
                    olá
                    <%=user.name%>

                        <%}%>


                            <script type="text/javascript">
                                $('#ajax_form').click(function() {
                                    var dados = {
                                        email: $("#email").val(),
                                        password: $("#password").val()
                                    }

                                    jQuery.ajax({
                                        type: "POST",
                                        url: "/login",
                                        data: dados,
                                        success: function(data) {
                                            window.location.replace("/");
                                        },
                                        error: function(XMLHttpRequest, textStatus, errorThrown) {
                                            var message = "Usuário ou senha inválidos!"
                                            $('#message').append('<h3 style="text-align:center;font-size:28px!important">' + message + '</h3>')


                                        }
                                    });

                                    return false;
                                });
                            </script>
                            <!--/#feature-->
        </div>

    </section>
    <!--/about-us-->


